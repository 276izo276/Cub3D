INC=/usr/include


INCLIB=$(INC)/../lib

UNAME := $(shell uname)

CFLAGS= -I$(INC) -O3 -I.. -g

override NAME= mlx-test
SRC = main.c
OBJ = $(SRC:%.c=%.o)

LFLAGS = -L.. -lmlx -L$(INCLIB) -lXext -lX11 -lm

ifeq ($(UNAME), Darwin)
	# mac
	CC = clang
else ifeq ($(UNAME), FreeBSD)
	# FreeBSD
	CC = clang
else
	#Linux and others...
	CC	= gcc
	LFLAGS += -lbsd
endif

all: start_build_aff $(NAME)

.PHONY:start_build_aff
start_build_aff:
	@echo "\n${_BOLD}${_RED}Start Building  âš™ï¸  ğŸ› ï¸  âš™ï¸ 	${_GREEN}${_UNDER}$(NAME)${_END} :"

$(NAME): $(OBJ)
	@$(CC) -o $(NAME) $(OBJ) $(LFLAGS)
	@echo "    ${_BOLD}${_GREEN}ğŸ’¿  â—€â—€â—€ ${_LIME}Creating Executable ğŸ“‘ğŸ—‚ï¸   ${_YELLOW}$(NAME)${_END}"

%.o: %.c
	@$(CC) $(CFLAGS) -c -o $@ $<
	@echo "	${_LIME}${_BOLD}${NAME}	${_END}${_GREEN}Compiling : ${_END}$(CC) ${_BLUE} $(CFLAGS) ${_PURPLE} $<${_END}";

show:
	@printf "UNAME		: $(UNAME)\n"
	@printf "NAME  		: $(NAME)\n"
	@printf "CC		: $(CC)\n"
	@printf "CFLAGS		: $(CFLAGS)\n"
	@printf "LFLAGS		: $(LFLAGS)\n"
	@printf "SRC		:\n	$(SRC)\n"
	@printf "OBJ		:\n	$(OBJ)\n"

clean:
	@rm -f $(NAME) $(OBJ) *~ core *.core
	@echo "    ${_RED}${_BOLD}ğŸ—‘ï¸  â—€â—€â—€ Deleting files ğŸš® ${_YELLOW}$(NAME) $(OBJ) *~ core *.core${_END}\n"

re: clean all

